<%= form_for(@nest) do |f| %>
  <div class="general_details">
  <% if @nest.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nest.errors.count, "error") %> prohibited this new temperature setting from being saved:</h2>

      <ul>
      <% @nest.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :temperature %><br>
    <%= f.number_field :temperature %>
  </div>
  <%= f.hidden_field :event_id, :value => @event_id %>
  <div class="actions">
    <%= link_to 'Back', nests_path, class: "btn btn-back" %>
    <%= f.submit 'Set Temp', class: "btn btn-create" %>
  </div>
</div>
<% end %>
