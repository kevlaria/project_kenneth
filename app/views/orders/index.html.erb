<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Manifest</th>
      <th>Pickup name</th>
      <th>Pickup address</th>
      <th>Pickup phone number</th>
      <th>Pickup business name</th>
      <th>Pickup notes</th>
      <th>Dropoff name</th>
      <th>Dropoff address</th>
      <th>Dropoff phone number</th>
      <th>Dropoff business name</th>
      <th>Dropoff notes</th>
      <th>Quote</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.manifest %></td>
        <td><%= order.pickup_name %></td>
        <td><%= order.pickup_address %></td>
        <td><%= order.pickup_phone_number %></td>
        <td><%= order.pickup_business_name %></td>
        <td><%= order.pickup_notes %></td>
        <td><%= order.dropoff_name %></td>
        <td><%= order.dropoff_address %></td>
        <td><%= order.dropoff_phone_number %></td>
        <td><%= order.dropoff_business_name %></td>
        <td><%= order.dropoff_notes %></td>
        <td><%= order.quote_id %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

