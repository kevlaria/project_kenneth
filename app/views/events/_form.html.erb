<%= form_for(@event) do |f| %>
<div style="width: 100%; overflow: hidden;">
    <div>
    <% if @event.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>

        <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :starts_at %><br>
        <%= f.datetime_select :starts_at %>
      </div>
      <% if @where == "new" %>
        <div>
          <%= f.radio_button(:category, "Order") %>
          <%= label_tag(:postmate, "Order Products") %>
          <%= f.radio_button(:category, "Nest") %>
          <%= label_tag(:next, "Adjust Thermostat") %>
        </div>
        <div>
          Repeat:
          <%= radio_button_tag(:repeat, "Never") %>
          <%= label_tag(:never, "Never") %>
          <%= radio_button_tag(:repeat, "Daily") %>
          <%= label_tag(:daily, "Daily") %>
          <%= radio_button_tag(:repeat, "Weekly") %>
          <%= label_tag(:weekly, "Weekly") %>
        </div>
      <% else %>
      <% end %>
      <div class="actions">
        <%= f.submit %>
      </div>
    </div>
</div>
<% end %>

